// SOlution forked from BRIAN JAMES CLARKE
boolean checkBST(Node root) {
  if (root == null) {
    return true;
  }
  
  if (root.left != null) {
    if (root.left.data >= root.data) {
      return false;
    }
    return checkBST(root.left);
  } 
  
  if (root.right != null) {
    if (root.right.data <= root.data) {
      return false;
    }
    return checkBST(root.right);
  } 
  
  return true;
}
